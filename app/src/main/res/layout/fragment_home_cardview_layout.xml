<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="8dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/home_repo_photo"
            android:layout_width="48dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/home_repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/home_repo_photo"
            android:paddingTop="7dp" />


        <ImageView
            android:id="@+id/home_stars"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/home_repo_photo"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/stars" />

        <TextView
            android:id="@+id/home_stars_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_repo_photo"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/home_stars"
            android:layout_marginTop="40dp"
            android:paddingTop="7dp" />

        <ImageView
            android:id="@+id/home_forks"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/home_repo_photo"
            android:layout_toRightOf="@id/home_stars_count"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/forks" />

        <TextView
            android:id="@+id/home_forks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_repo_photo"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/home_forks"
            android:paddingTop="7dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
</LinearLayout>